<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/login_txtInput_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#ffffff">

            <EditText
                android:id="@+id/login_re_ed_username"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:hint="账号"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="#ffffff" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/login_txtInput_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#ffffff">
          >

            <EditText
                android:id="@+id/login_re_ed_password"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="#ffffff" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/login_txtInput_password2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#ffffff"
            >

            <EditText
                android:id="@+id/login_re_ed_password2"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:hint="再次输入密码"
                android:inputType="textPassword"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="#ffffff" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <Button

        android:id="@+id/login_re_bu_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="@drawable/textview_shape"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="注册"
        android:textColor="#ffffff" />

</LinearLayout>