<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="14dp">

    <TextView
        android:id="@+id/tv_gall_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="版本号：" />

    <TextView
        android:id="@+id/tv_gall_impor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否为必要更新：" />

    <TextView
        android:id="@+id/tv_gall_infor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="版本信息：" />

    <TextView
        android:id="@+id/tv_gall_jd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载进度：" />
    <Button
        android:id="@+id/btn_gall_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="检查更新" />

    <Button
        android:id="@+id/btn_gall_install"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安装" />

</LinearLayout>