<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp">

        <ImageView
            android:id="@+id/iv_people_tx"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/touxiang2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_people_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="MARINE LEGRAND"
                    android:textColor="#595969"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/btn_people_dy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/textview_myfollow_dy"
                    android:text="订阅"
                    android:textColor="#8fc31f"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_people_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_people_name"
                    android:layout_marginRight="70dp"
                    android:ellipsize="end"
                    android:ems="1"
                    android:maxLines="1"
                    android:text="San Francisco, CA"
                    android:textColor="#bcbcbc"
                    android:textSize="13sp" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="32dp"
        android:background="#80bcbcbc" />

</LinearLayout>
